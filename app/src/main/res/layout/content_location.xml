<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">
  <data>
    <import type="android.view.View"/>
    <variable
      name="status"
      type="String"/>
  </data>
  <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".views.main.MainActivity"
    tools:showIn="@layout/activity_location">

    <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">

      <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/layout_bottom">

        <fragment
          android:id="@+id/fragment"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:name="com.google.android.gms.maps.SupportMapFragment"/>

      </FrameLayout>

      <LinearLayout
        android:id="@+id/layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
          android:id="@+id/location"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:paddingTop="8dp"
          android:paddingBottom="8dp"
          android:paddingStart="16dp"
          android:paddingEnd="16dp"
          android:textColor="@android:color/black"
          android:visibility="gone"/>

        <TextView
          android:id="@+id/address"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:paddingTop="8dp"
          android:paddingBottom="8dp"
          android:paddingStart="16dp"
          android:paddingEnd="16dp"
          android:textColor="@android:color/black"
          android:visibility="gone"/>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:orientation="horizontal"
          android:weightSum="3">

          <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
              android:id="@+id/distance"
              android:textStyle="bold"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center_horizontal"
              android:text="@string/distance_default"
              android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center_horizontal"
              android:text="@string/distance"/>

          </LinearLayout>

          <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:orientation="vertical">

            <TextView
              android:id="@+id/duration"
              android:textStyle="bold"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center_horizontal"
              android:text="@string/time"
              android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center_horizontal"
              android:text="@string/duration"/>

          </LinearLayout>

          <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
              android:id="@+id/speed"
              android:textStyle="bold"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center_horizontal"
              android:text="@string/distance_default"
              android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center_horizontal"
              android:text="@string/speed"/>

          </LinearLayout>


        </LinearLayout>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:paddingBottom="16dp"
          android:gravity="center"
          android:orientation="horizontal">

          <ImageView
            android:id="@+id/record"
            android:layout_width="@dimen/icon"
            android:layout_height="@dimen/icon"
            android:src="@drawable/ic_circle"
            android:visibility="@{status == `record` ? View.VISIBLE : View.GONE}"/>

          <ImageView
            android:id="@+id/pause"
            android:layout_width="@dimen/icon"
            android:layout_height="@dimen/icon"
            android:src="@drawable/ic_pause"
            android:visibility="@{status == `pause` ? View.VISIBLE : View.GONE}"/>

          <ImageView
            android:id="@+id/refresh"
            android:layout_width="@dimen/icon"
            android:layout_height="@dimen/icon"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_refresh"
            android:visibility="@{status == `stop` ? View.VISIBLE : View.GONE}"/>

          <ImageView
            android:id="@+id/stop"
            android:layout_width="@dimen/icon"
            android:layout_height="@dimen/icon"
            android:layout_marginStart="16dp"
            android:src="@drawable/ic_stop"
            android:visibility="@{status == `stop` ? View.VISIBLE : View.GONE}"/>

        </LinearLayout>

      </LinearLayout>

    </RelativeLayout>

  </androidx.constraintlayout.widget.ConstraintLayout>
</layout>